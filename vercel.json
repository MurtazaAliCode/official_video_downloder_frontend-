{
  "builds": [
    {
      "src": "client/index.html",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "client/dist/public" }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/public/$1"
    }
  ]
}
